import { defineField, defineType } from 'sanity'

export const heroType = defineType({
  name: 'hero',
  title: 'Hero Bölümü (Kaydırıcı)',
  type: 'object',
  fields: [
    defineField({
      name: 'slider',
      title: 'Slaytlar',
      type: 'array',
      of: [
        {
          type: 'object',
          name: 'slayt',
          title: 'Slayt',
          fields: [
            defineField({
              name: 'baslik',
              title: 'Ana Başlık',
              type: 'string',
              validation: (Rule) => Rule.required(),
            }),
            defineField({
              name: 'altBaslik',
              title: 'Alt Başlık Metni (Boyalı Kısım)',
              type: 'string',
            }),
            defineField({
              name: 'etiket',
              title: 'Üst Etiket',
              type: 'string',
            }),
            defineField({
              name: 'aciklama',
              title: 'Kısa Açıklama',
              type: 'text',
              rows: 2,
            }),
            defineField({
              name: 'gorsel',
              title: 'Arkaplan Görseli',
              type: 'image',
              options: { hotspot: true },
              validation: (Rule) => Rule.required(),
            }),
          ],
        },
      ],
      validation: (Rule) => Rule.min(1),
    }),
  ],
})
